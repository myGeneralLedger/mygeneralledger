  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    nav a {
      margin-right: 20px;
      text-decoration: none;
      color: #0366d6;
    }
    h1 { color: #222; }
    table, th, td {
      border: 1px solid #aaa;
      border-collapse: collapse;
      padding: 6px;
    }
    table { width: 100%; margin-top: 20px; }
    th { background-color: #f0f0f0; }
  </style>
