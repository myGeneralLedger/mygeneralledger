<body>
  <h1>Revenue Ledger</h1>
  <nav>
    <a href="index.html">üè† Home</a>
  </nav>

  <p>This page lists all journal entries involving revenue accounts.</p>

  <table id="revenueTable">
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Account</th>
        <th>Debit</th>
        <th>Credit</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const revenueTableBody = document.querySelector('#revenueTable tbody');

    function loadRevenueEntries() {
      const entries = JSON.parse(localStorage.getItem('journalEntries') || '[]');
      const accounts = JSON.parse(localStorage.getItem('accounts') || '[]');
      const revenueAccounts = accounts
        .filter(acc => acc.type === 'Revenue')
        .map(acc => acc.name);

      const revenueEntries = entries.filter(entry =>
        revenueAccounts.includes(entry.debitAccount) || revenueAccounts.includes(entry.creditAccount)
      );

      revenueEntries.sort((a, b) => new Date(a.date) - new Date(b.date));

      revenueEntries.forEach(entry => {
        if (revenueAccounts.includes(entry.debitAccount)) {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${entry.date}</td>
            <td>${entry.description}</td>
            <td>${entry.debitAccount}</td>
            <td>${parseFloat(entry.debitAmount).toFixed(2)}</td>
            <td></td>
          `;
          revenueTableBody.appendChild(row);
        }
        if (revenueAccounts.includes(entry.creditAccount)) {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${entry.date}</td>
            <td>${entry.description}</td>
            <td>${entry.creditAccount}</td>
            <td></td>
            <td>${parseFloat(entry.creditAmount).toFixed(2)}</td>
          `;
          revenueTableBody.appendChild(row);
        }
      });
    }

    loadRevenueEntries();
  </script>
</body>
</html>
